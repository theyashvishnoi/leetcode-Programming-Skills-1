question - https://leetcode.com/problems/subtract-the-product-and-sum-of-digits-of-an-integer/

c++ code-

class Solution {



public:
    int subtractProductAndSum(int n) {
        int sum = 0;
        int prod = 1;
        
        int dig;
        
        while(n!=0){
            dig=n%10;
            sum+=dig;
            prod*=dig;
            n/=10;
        }
        return (prod-sum);
    }
};
